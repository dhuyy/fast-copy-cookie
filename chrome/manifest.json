{
  "name": "Fast Copy Cookie",
  "description": "A simple Chrome extension that copies cookies from one tab to another with a single click.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["cookies", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/cookie16.png",
      "32": "/images/cookie32.png",
      "48": "/images/cookie48.png",
      "128": "/images/cookie128.png"
    }
  },
  "icons": {
    "16": "/images/cookie16.png",
    "32": "/images/cookie32.png",
    "48": "/images/cookie48.png",
    "128": "/images/cookie128.png"
  },
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"]
}
